<%
// modify date publish
const modifyDate = (publishTime) => {
    const year = publishTime.getFullYear();
    const month = (publishTime.getMonth() + 1).toString().padStart(2, '0');
    const date = publishTime.getDate().toString().padStart(2, '0');
    const hour = publishTime.getHours().toString().padStart(2, '0');
    const minute = publishTime.getMinutes().toString().padStart(2, '0');
    return `${date}/${month}/${year} at ${hour}:${minute}`;
};
%>

<div data-custom-title>
    <span><%= title; %></span>
</div>

<% if (data.length === 0) { %>
    <h2>No content</h2>
<% } else { %>
    <div class="users-list" data-custom-table data-user-wrapper>
        <div class="users-list__inner">
            <div class="users-list__heading" data-column-wrapper="heading">
                <div class="users-list--user" data-column="User">User</div>
                <div class="users-list--register" data-column="Register At">Register At</div>
                <div class="users-list--email" data-column="Email">Email</div>
                <div class="users-list--role" data-column="Role">Role</div>
                <div class="users-list--state" data-column="State">State</div>
                <div class="users-list--action" data-column="Action">Action</div>
            </div>

            <% data.forEach(user => { %>

                <div class="users-list__item" data-column-wrapper="item">
                    <div class="users__item--user not-show-user" data-column="User"><%= user.name; %></div>

                    <div class="users__item--register not-show-title" data-column="Register At">
                        <time><%= modifyDate(user.registerAt); %></time>
                    </div>

                    <div class="users__item--email"
                         data-column="Email"><%= user.email; %></div>

                    <div class="users__item--role"
                         data-column="Role"><%= user.role; %></div>

                    <div class="users__item--state"
                         data-column="State"><%= user.state; %></div>

                    <div class="users__item--action" data-column="Action">

                        <button class="users__item--link" data-toggle="user-popup" data-id="<%= user._id %>"
                                data-user-item>Edit
                        </button>
                        <a href="?post_type=<%= contentType; %>&method=post&action=delete&id=<%= user._id; %>"
                           class="users__item--link trash">Trash</a>
                    </div>

                </div>
            <% }); %>
        </div>

        <div data-popup>
            <div data-popup-overflow>
                <div data-popup-overlay data-toggle="user-popup"></div>

                <!-- pop up content-->
                <form method="post" action="#" data-popup-inner data-user-form>

                    <div data-form-column class="fl-grid">

                        <div data-form-group>

                            <!-- name -->
                            <div data-form-input class="fl-center-v">
                                <label for="username">Username</label>
                                <input id="username" data-user-name name="name">
                            </div>
                        </div>

                        <div data-form-group>

                            <!-- email -->
                            <div data-form-input class="fl-center-v">
                                <label for="email">Email</label>
                                <input id="email" data-user-email name="email">
                            </div>
                        </div>
                    </div>

                    <div data-form-column>
                        <div data-form-group>
                            <div data-form-input>

                                <!-- register at-->
                                <label for="register">Register</label>
                                <div id="register" data-user-register></div>
                            </div>
                        </div>
                    </div>

                    <div data-form-column>
                        <div data-form-group>
                            <div data-form-input>

                                <!-- password -->
                                <label for="password">Password</label>
                                <input type="password" value="hidden" id="user-password" readonly>
                                <button type="button" data-user-generate-password-btn>Generate new password</button>

                            </div>
                        </div>
                    </div>

                    <div data-form-column>
                        <div data-form-group>
                            <div data-form-input>

                                <!-- role -->
                                <label for="role">Role</label>
                                <select data-select-role-value name="role" id="role">
                                    <option value="user">User
                                    </option>
                                    <option value="admin">Admin
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div data-form-group>
                            <div data-form-input>

                                <!-- state -->
                                <label for="state">State</label>
                                <select data-select-state-value name="state" id="state">
                                    <option value="active">Active
                                    </option>
                                    <option value="suspend">Suspend
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="fl-center-v mt-auto" style="gap:5px;">
                        <button class="btn_primary" type="button" data-user-save-btn>Save</button>
                        <button class="btn_primary error" type="button" data-user-delete-btn>Delete</button>
                        <button class="btn_transparent" type="button" data-user-close-btn
                                data-toggle="user-popup">Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %>